<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/mytou"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/my_bg"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wode"
            android:textColor="#ffff"
            android:textSize="24sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imtu"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/mytou"
        android:background="@drawable/my_bg"></ImageView>

    <ImageButton
        android:id="@+id/setimageicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/mytou"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="54dp"
        android:background="@mipmap/my_set" />

    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imtu"
        android:background="@mipmap/bg_blue">

        <RelativeLayout
            android:id="@+id/Relative"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:gravity="fill_vertical">

            <RelativeLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="历史"
                    android:textColor="#ffffffff"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/i1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/l1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#ffffffff" />

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/i1"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/woderecy"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="15dp"></android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <ImageView
                android:id="@+id/ir"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/re1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re1"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="缓存"
                    android:textColor="#ffffffff"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/i2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/l2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#ffffffff" />


            <RelativeLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/i2"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="收藏"
                    android:textColor="#ffffffff"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/i3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/l3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#ffffffff" />

            <RelativeLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/i3"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="主题"
                    android:textColor="#ffffffff"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/right" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/i4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/l4"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="#ffffffff" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>